{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "test InstallApp",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/InstallAppTests/InstallAppTests.csproj",
                "/p:CollectCoverage=true",
                "/p:CoverletOutputFormat=lcov",
                "/p:CoverletOutput=./coverage/lcov.info"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "test ServerApp",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/ServerAppTests/ServerAppTests.csproj",
                "/p:CollectCoverage=true",
                "/p:CoverletOutputFormat=lcov",
                "/p:CoverletOutput=./coverage/lcov.info"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "test all",
            "dependsOn": ["test InstallApp", "test ServerApp"],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}