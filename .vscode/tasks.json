{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "test InstallApp",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/InstallAppTests/InstallAppTests.csproj",
                "/p:CollectCoverage=true",
                "/p:CoverletOutputFormat=lcov",
                "/p:CoverletOutput=./coverage/lcov.info"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "test ServerApp",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/ServerAppTests/ServerAppTests.csproj",
                "/p:CollectCoverage=true",
                "/p:CoverletOutputFormat=lcov",
                "/p:CoverletOutput=./coverage/lcov.info"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "test all",
            "dependsOn": ["test InstallApp", "test ServerApp"],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/palworld-server-manager.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/palworld-server-manager.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/palworld-server-manager.sln"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}